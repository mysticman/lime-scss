{
  "version": "0.9.1",
  "name": "lime-scss",
  "description": "Lime scss framework is a lightweight scss framework based flexbox, with NO javascript dependency.",
  "license": "MIT",
  "author": {
    "name": "Geredy Emil",
    "email": "emil.geredy@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/mysticman/lime-scss/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mysticman/lime-scss"
  },
  "engines": {
    "node": ">=4"
  },
  "files": [
    "scss/*.scss",
    ".gitignore",
    "package.json",
    "CHANGESLOG",
    "README",
    "LICENSE"
  ],
  "keywords": [
    "css framework",
    "scss framework",
    "scss",
    "lime",
    "micro-framework",
    "mobile-first",
    "flexbox",
    "responsive",
    "javascript less"
  ],
  "scripts-info": {
    "setup": "Setup project",
    "dev": "Start the demo page"
  },
  "scripts": {
    "setup": "npm install",
    "clean": "rimraf ./demo/lime*.css",
    "prebuild": "npm run clean",
    "build:css": "node-sass ./scss/lime-bundle.scss",
    "build:css:uncompressed": "npm run build:css -- ./demo/lime.css",
    "build:css:min": "npm run build:css -- --output-style compressed ./demo/lime.min.css",
    "build": "npm run build:css:min && npm run build:css:uncompressed",
    "watch:css": "npm run build:css:uncompressed -- --watch",
    "dev": "npm run clean && npm run build:css:uncompressed && concurrently \"npm run watch:css\" \"npm run server\"",
    "server": "browser-sync start --files \"./demo/*.html,./demo/*.css\" --server ./demo",
    "node-sass": "node-sass"
  },
  "devDependencies": {
    "browser-sync": "^2.18.2",
    "concurrently": "^3.1.0",
    "highlight": "^0.2.4",
    "node-sass": "^3.13.0",
    "rimraf": "^2.5.4",
    "cpx": "^1.5.0"
  }
}
